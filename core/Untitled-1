SELECT COUNT(*) AS grade_a_count
FROM assignments
WHERE grade = 'A'
AND teacher_id IN (
    SELECT teacher_id
    FROM (
        SELECT teacher_id, COUNT(*) AS assignment_count
        FROM assignments
        GROUP BY teacher_id
        ORDER BY assignment_count DESC
        LIMIT 1
    ) AS max_assignments
);

